{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "cors", "express", "node-forge"]
  },
  "include": ["main.ts", "main/**/*", "main/**/*.d.ts"],
  "exclude": ["node_modules"]
}
