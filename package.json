{
  "name": "relocke-wallet",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"tsc -p tsconfig.main.json --watch\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build && tsc -p tsconfig.main.json",
    "package": "electron-builder"
  },
  "author": "pur3miish",
  "description": "ReLocke wallet",
  "build": {
    "appId": "com.relocke.wallet",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "directories": {
      "output": "dist",
      "buildResources": "dist"
    }
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "wait-on": "^8.0.2"
  }
}
