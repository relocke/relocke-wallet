{
  "name": "relocke-wallet",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"tsc -p tsconfig.main.json --watch\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build && tsc -p tsconfig.main.json",
    "icons": "electron-icon-builder --input=src/assets/icons/app-icon.png --output=src/assets --flatten",
    "package": "electron-builder"
  },
  "author": "pur3miish",
  "description": "ReLocke wallet",
  "build": {
    "productName": "ReLocke Wallet",
    "appId": "com.relocke.wallet",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "icon": "src/assets/icons/icon.icns",
      "protocols": [
        {
          "name": "ReLocke Protocol",
          "schemes": [
            "relocke"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/icons/icon.ico",
      "extraFiles": [
        {
          "from": "build/protocols/relocke.reg",
          "to": "relocke.reg"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "src/assets/icons/1024x1024.png",
      "extraFiles": [
        {
          "from": "build/protocols/relocke.desktop",
          "to": "relocke.desktop"
        }
      ]
    },
    "directories": {
      "output": "dist",
      "buildResources": "dist"
    },
    "afterPack": "scripts/afterpack.js",
    "publish": [
      {
        "provider": "github",
        "owner": "relocke",
        "repo": "relocke-wallet"
      }
    ]
  },
  "dependencies": {
    "antelope-ecc": "^5.0.0-rc.2",
    "antelope-webauthn": "^1.0.0-rc.0",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-basic-auth": "^1.2.1",
    "helmet": "^8.0.0",
    "keytar": "^7.9.0",
    "node-forge": "^1.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-router-dom": "^7.1.5",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node-forge": "^1.3.11",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "electron-icon-builder": "^2.0.1",
    "electron-packager": "^17.1.2",
    "esbuild": "^0.25.0",
    "esbuild-plugin-node-externals": "^1.0.1",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "wait-on": "^8.0.2"
  }
}
